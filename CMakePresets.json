{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "binaryDir": "${sourceDir}/build/debug",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "LIPS_ENABLE_TESTS": "ON"
            }
        },
        {
            "name": "xcode",
            "displayName": "XCode preset",
            "generator": "Xcode",
            "binaryDir": "${sourceDir}/build/xcode"
        },
        {
            "name": "make",
            "inherits": "default",
            "displayName": "Makefile preset",
            "description": "Default build using make",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "LIPS_ENABLE_CODE_COVERAGE": "OFF"
            }
        },
        {
            "name": "docker",
            "inherits": "default",
            "displayName": "Docker preset",
            "description": "Default preset for use in docker",
            "cacheVariables": {
                "LIPS_ENABLE_CODE_COVERAGE": "OFF"
            }
        },
        {
            "name": "clang-tidy",
            "inherits": "default",
            "displayName": "Run clang-tidy",
            "description": "Run clang-tidy on the source code",
            "binaryDir": "${sourceDir}/build/clang-tidy",
            "cacheVariables": {
                "LIPS_ENABLE_CLANG_TIDY": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "make",
            "configurePreset": "make"
        },
        {
            "name": "xcode",
            "configurePreset": "xcode"
        },
        {
            "name": "clang-tidy",
            "configurePreset": "clang-tidy"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "make",
            "configurePreset": "make"
        },
        {
            "name": "xcode",
            "configurePreset": "xcode",
            "configuration": "Debug"
        }
    ]
}
