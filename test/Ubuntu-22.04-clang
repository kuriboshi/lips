FROM ubuntu:22.04

ARG USER_ID
ARG GROUP_ID

RUN apt-get -y update && apt-get -y install software-properties-common
RUN apt-get -y update && apt-get -y install gpg
RUN apt-get -y update && apt-get -y install wget
RUN apt-get -y update && apt-get -y install cmake
RUN apt-get -y update && apt-get -y install ninja-build
RUN apt-get -y update && apt-get -y install clang++-14
RUN apt-get -y update && apt-get -y install libncurses-dev
RUN update-alternatives --install /usr/bin/cc cc /usr/bin/clang-14 90 --slave /usr/bin/c++ c++ /usr/bin/clang++-14

ENV USER=root
ENV HOME=/root
USER ${USER_ID}:${GROUP_ID}
WORKDIR /project
